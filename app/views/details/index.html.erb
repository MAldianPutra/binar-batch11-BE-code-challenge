<h1>Daftar Pembelian</h1>

<table>
  <% @details.each do |detail| %>
    <tr>
      <td>Detail ID : <%= detail.id%></td>
      <td> || Item ID :  <%= detail.item_id  %></td>
      <td> || Order ID : <%= detail.order_id %></td>
      <td> || Price :  <%= detail.price  %></td>
      <td> || Quantity : <%= detail.quantity %></td>
      <td><%= button_to 'Edit', edit_detail_path(detail), method: 'get'%></td>
      <td><%= button_to 'Remove', detail_path(detail), method: 'delete', data: { confirm: 'Are you sure?' } %></td>
  <% end %>
</table>

<%= link_to "Add a New detail", new_detail_path %>