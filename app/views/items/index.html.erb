<h1>Daftar Obat</h1>

<table>
  <% @items.each do |item| %>
    <tr>
      <td>Item ID : <%= item.id%><td>
      <td> || <%= link_to item.item_name, item_path(item) %></td>
      <td> || Quantity : <%= item.item_quantity %></td>
      <td><%= button_to 'Edit', edit_item_path(item), method: 'get'%></td>
      <td><%= button_to 'Remove', item_path(item), method: 'delete', data: { confirm: 'Are you sure?' } %></td>
  <% end %>
</table>

<%= link_to "Add a New Item", new_item_path %>